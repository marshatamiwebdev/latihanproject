@model Latihan.Models.MUser

<div class="container mt-2"> 
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Nama</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address" class="control-label">Alamatr</label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input class="btn btn-primary w-100" type="submit" value="Buat User" class="btn btn-default" />
                     <div>
                        <a class="btn btn-warning w-100 mt-2" asp-action="Index">Kembali</a>
                    </div>
                </div>
            </form>
        </div>
    </div>

   
</div>